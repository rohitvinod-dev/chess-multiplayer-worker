{
  "compatibility_date": "2025-10-08",
  "main": "src/server/index.ts",
  "name": "chess-multiplayer-worker",
  "migrations": [
    {
      "new_sqlite_classes": ["Chat"],
      "tag": "v1"
    },
    {
      "deleted_classes": ["Matchmaker"],
      "tag": "v2"
    },
    {
      "new_sqlite_classes": ["MatchmakingQueue"],
      "tag": "v3"
    }
  ],
  "assets": {
    "directory": "./public",
    "binding": "ASSETS",
    "not_found_handling": "single-page-application"
  },
  "build": {
    "command": "esbuild src/client/index.tsx --bundle --splitting --format=esm --platform=browser --outdir=public/dist"
  },
  "durable_objects": {
    "bindings": [
      {
        "class_name": "Chat",
        "name": "Chat"
      },
      {
        "class_name": "GameRoom",
        "name": "GAME_ROOM"
      },
      {
        "class_name": "MatchmakingQueue",
        "name": "MATCHMAKING_QUEUE"
      }
    ]
  },
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true
}
